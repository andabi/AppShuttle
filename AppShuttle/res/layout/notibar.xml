<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:baselineAligned="false"
    android:gravity="left"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="@dimen/notibar_icon_area_width"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/noti_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:contentDescription="@string/icon"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/appshuttle" />

            <TextView
                android:id="@+id/noti_extra_num"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@xml/notibar_rounded_corner"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:layout_width="2dp"
            android:background="@color/half_transparent_white"
            android:layout_height="match_parent"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="24dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/noti_favorite_container"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/noti_present_container"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>